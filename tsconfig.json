{
  "extends": "./node_modules/gts/tsconfig-google.json",  
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "module": "system",
    "outDir": "./lib",
    "moduleResolution": "node",
    "strict": true,
    "target": "ES6",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "composite": true,
    "outFile": "./lib/index.js"
  },
  "files": [],  
  "references": [
    {
      "path": "./src"
    },
    {
      "path": "./tests"
    }
  ] 
}

